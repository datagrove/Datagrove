{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch App",
            "request": "launch",
            "mainClass": "App",
            "projectName": "examples"
        },
        {
            "name": "pepin",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/dotnet/src/Testing.Pepin/bin/Debug/net7.0/Testing.Pepin.dll",
            "args": [
                "build"
            ],
            "cwd": "${workspaceFolder}/dotnet/src/Testing.Sample",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}