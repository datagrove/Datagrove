{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "strict": true,
    "baseUrl": "./",
    "noEmit": true
  },
  "includes": [
    "src/*.tsx,*.ts",
  ],
  "exclude": [
    "node_modules/**",
    "**/*.spec.ts"
  ]
}